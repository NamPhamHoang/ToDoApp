{
    "compilerOptions": {
    "lib": ["es2019", "es2020.bigint", "es2020.string", "es2020.symbol.wellknown"],
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "preserveConstEnums": true,
      "types": ["node", "jest"],
      "baseUrl": ".",
      "paths": {
        "~@/*": ["./src/*"]
      },
    },
    "lib": ["DOM", "ES2015", "ESNext", "ES2016", "es2020.bigint"],
    "include": ["src/**/*.ts"],
    "exclude": ["src/**/*.spec.ts", "node_modules/**"],
    "compileOnSave": false
  }